<div>
    {{#each articles}}
    {{#if this.saved}}
    <div class="card" id="savedCard" style="width: 75rem;">
        <div class="card-body">
            <a href="http://nytimes.com{{this.link}}" target="_blank">
                <h3 class="card-title">{{this.title}}</h3>
            </a>
            <p class="card-subtitle mb-2 text-muted">{{this.snip}}</p>
            <button type="button" class="btn btn-success" id="comment">Comment</button>
            <button type="button" class="btn btn-danger deleteArticle" id="{{this._id}}">Delete</button>
        </div>
    </div>
    {{/if}}
    {{/each}}
</div>