<div>
    {{#each articles}}
    {{#if this.saved}}
    <div class="card" id="savedCard" style="width: 75rem;">
        <div class="card-body">
            <a href="http://nytimes.com{{this.link}}" target="_blank">
                <h3 class="card-title">{{this.title}}</h3>
            </a>
            <p class="card-subtitle mb-2 text-muted">{{this.snip}}</p>
            <button type="button" class="btn btn-success addComment" id="{{this._id}}" data-toggle="modal"
                data-target=".article">
                Comment
            </button>
            <button type="button" class="btn btn-danger deleteArticle" id="{{this._id}}">Delete</button>
        </div>
    </div>
    {{/if}}
    {{/each}}
    <div class="modal fade article" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{this._id}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>


                <div class="modal-body">
                    <div id="commentContainer">
                        <div class="row">
                            <div class="col-8">
                                <div class="savedComment"></div>
                            </div>
                            <div class="col-2"></div>
                            <div class="col-2">
                                <button type="button" class="btn btn-danger" id={{this._id}}>X</button>
                            </div>
                        </div>
                    </div>

                    <textarea type="text" class="userComment" rows="4" cols="50" placeholder="New Comment"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary saveComment" id="{{this._id}}">Save Comment</button>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal -->