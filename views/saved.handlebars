<div>
    {{#each articles}}
    {{#if this.saved}}
    <div class="card" id="savedCard" style="width: 75rem;">
        <div class="card-body">
            <a href="http://nytimes.com{{this.link}}" target="_blank">
                <h3 class="card-title">{{this.title}}</h3>
            </a>
            <p class="card-subtitle mb-2 text-muted">{{this.snip}}</p>
            <button type="button" class="btn btn-success addComment" id="{{this._id}}" data-toggle="modal"
                data-target="#commentModal">
                Comment
            </button>
            <button type="button" class="btn btn-danger deleteArticle" id="{{this._id}}">Delete</button>
        </div>
    </div>
    <div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{this.title}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="{{this._id}}">Save Comment</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{/each}}


